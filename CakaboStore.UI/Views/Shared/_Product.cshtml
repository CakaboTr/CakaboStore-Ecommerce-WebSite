@model Product
<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
    <!-- Block2 -->
    <div class="block2">
        <div class="block2-pic hov-img0">
            @if (Model.ProductPictures.Any())
            {
                <img src="@Model.ProductPictures.FirstOrDefault().Picture" alt="@Model.Name">
            }
            else
            {
                <img src="/img/gorsel-hazirlaniyor-1.jpg" alt="@Model.Name">
            }
        </div>

        <div class="block2-txt flex-w flex-t p-t-14">
            <div class="block2-txt-child1 flex-col-l ">
                <a asp-controller="Product" asp-action="Detail" asp-route-name="@GeneralTools.GetUrl(Model.Name)" asp-route-id="@Model.ID" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                    @Model.Name
                </a>

                <span class="stext-105 cl3">
                    ₺@Model.Price
                </span>
            </div>

            <div class="block2">
                <a asp-controller="Product" asp-action="Detail" asp-route-name="@GeneralTools.GetUrl(Model.Name)" asp-route-id="@Model.ID" class="add-card">
                    <i class="fa fa-search" aria-hidden="true"></i><span>ÜRÜN DETAYLARI</span>
                </a>
            </div>

            <div class="block2-txt-child2 flex-r p-t-3">
                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                    <img class="icon-heart1 dis-block trans-04" src="/images/icons/icon-heart-01.png" alt="ICON">
                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="/images/icons/icon-heart-02.png" alt="ICON">
                </a>
            </div>
        </div>
    </div>
</div>
