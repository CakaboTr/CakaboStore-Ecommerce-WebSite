@model IOrderedQueryable<Category>
<div class="right_col" role="main">
    <div class="">


        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Kategori Yönetimi</h2>
                        <a asp-controller="Category" asp-action="New" class="btn btn-success float-right" style="color:#fff">Yeni Kategori</a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">

                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Kategori Adı</th>
                                                <th>Sıra</th>
                                                <th></th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (Category c in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@c.ID">
                                                            @if (c.ParentID == null)
                                                            {
                                                                @c.Name
                                                                ;
                                                            }
                                                            else
                                                            {
                                                                @c.ParentCategory.Name <span>&lt;</span> @c.Name
                                                            }
                                                        </a>
                                                    </td>
                                                    <td>@c.DisplayIndex</td>
                                                    <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@c.ID" class="btn btn-danger">Sil</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>