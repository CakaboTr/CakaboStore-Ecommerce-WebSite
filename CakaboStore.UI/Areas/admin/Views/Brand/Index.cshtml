@model IOrderedQueryable<Brand>
<div class="right_col" role="main">
    <div class="">
        

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Marka Yönetimi</h2>
                        <a asp-controller="Brand" asp-action="New" class="btn btn-success float-right" style="color:#fff">Yeni Marka</a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Marka Adı</th>
                                                <th>Sıra</th>
                                                <th></th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (Brand b in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a asp-controller="Brand" asp-action="Edit" asp-route-id="@b.ID">
                                                            @b.Name
                                                        </a>
                                                    </td>
                                                    <td>@b.DisplayIndex</td>
                                                    <td><a asp-controller="Brand" asp-action="Delete" asp-route-id="@b.ID" class="btn btn-danger" >Sil</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>