@model IOrderedQueryable<ProductPicture>
<div class="right_col" role="main">
    <div class="">


        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Ürün Resim Yönetimi</h2>
                        <a asp-controller="ProductPicture" asp-action="New" asp-route-productid="@ViewBag.ProductId" class="btn btn-success float-right" style="color:#fff">Yeni Ürün Resmi</a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">

                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Ürün Resim Adı</th>
                                                <th>Ürün Resmi</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (ProductPicture pp in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a asp-controller="ProductPicture" asp-action="Edit" asp-route-id="@pp.ID">
                                                            @pp.Name
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <img height="150" src="@pp.Picture" alt="@pp.Name" />
                                                    </td>
                                                
                                                    <td>@pp.DisplayIndex</td>
                                                    <td>
                                                         <a asp-controller="ProductPicture" asp-action="Index" asp-route-product-id="@pp.ID">
                                                            Ürüne Ait Resimler
                                                         </a>
                                                    </td>
                                                    <td><a asp-controller="ProductPicture" asp-action="Delete" asp-route-id="@pp.ID" class="btn btn-danger">Sil</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>